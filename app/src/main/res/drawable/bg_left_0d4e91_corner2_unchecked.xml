<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
<!-- 边框 -->
<item>
    <shape >
        <!-- 通过pading指定边线有无和宽度 -->
        <padding
            android:left="2dp" android:bottom="2dp" android:top="2dp" android:right="1dp"
            />
        <solid
            android:color="@color/color_0D4E91"
            />
        <corners android:bottomLeftRadius="2dp" android:topLeftRadius="2dp"/>
    </shape>
</item>

<!-- 主体 -->
<item>
    <shape >
        <solid
            android:color="#ffffff"
            />
        <corners android:bottomLeftRadius="2dp" android:topLeftRadius="2dp"/>
    </shape>
</item>

</layer-list>