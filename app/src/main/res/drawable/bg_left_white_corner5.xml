<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- 边框 -->
<item>
    <shape>
        <!-- 通过pading指定边线有无和宽度 -->
        <padding
            android:bottom="2dp"
            android:left="2dp"
            android:right="1dp"
            android:top="2dp" />
        <solid android:color="@color/drakWhite" />
        <corners
            android:bottomLeftRadius="5dp"
            android:topLeftRadius="5dp"></corners>
    </shape>
</item>

<!-- 主体 -->
<item>
    <shape>
        <solid android:color="@color/white" />
        <corners
            android:bottomLeftRadius="5dp"
            android:topLeftRadius="5dp"></corners>
    </shape>
</item>

</layer-list>