<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.example.medicalregister.viewmodel.WeightRegisterViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/bg_enter"
        android:gravity="center_horizontal">

        <com.example.medicalregister.widget.TitleLayoutTmView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tltv_name="称重" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="250dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:background="@drawable/bg_top_8f296cdd_corner8"
                    android:text="重量" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_bottom_42296cdd_corner8"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="51sp"
                        android:textColor="@color/white"
                        android:text="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textColor="@color/white"
                        android:gravity="bottom"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="kg" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="250dp"
                android:layout_marginLeft="34dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_waste_name"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:background="@drawable/bg_top_8f296cdd_corner8"
                    android:text="" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/bg_bottom_42296cdd_corner8"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_source_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="22sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_register_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="20dp"
                        android:textSize="22sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_register_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="20dp"
                        android:textSize="22sp"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="自动打印标签"
            android:layout_marginTop="100dp"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="完  成"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_marginTop="40dp"
            android:gravity="center" />

    </LinearLayout>
</layout>