<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="horizontal"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="690dp"
        android:layout_height="370dp"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_white_corner25"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="28sp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textColor="@color/gray333"
            android:text="此操作将删除该出库单?请确认删除操作"/>
        <include layout="@layout/include_line_e7"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="取消"
                android:textSize="28sp"
                android:gravity="center"
                android:textColor="@color/gray333"/>
            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="确定"
                android:textSize="28sp"
                android:gravity="center"
                android:background="@drawable/bg_right_bottom_409eff_corner25"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>