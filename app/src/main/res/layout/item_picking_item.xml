<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:background="@drawable/bg_bottom_line_f4f4f4"
        android:text="1231"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_bottom_line_f4f4f4"
        android:orientation="horizontal">
        <com.example.medicalregister.widget.WidgetTextMsg
            android:id="@+id/wtm_item_quantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            app:wtm_left="数量："
            app:wtm_right=""
            app:wtm_textsize="14px"
            app:wtm_left_color="@color/black"
            app:wtm_right_color="@color/black" />
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:src="@mipmap/icon_arrow_right"/>
    </LinearLayout>

</LinearLayout>