<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.example.medicalregister.viewmodel.SettingViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/bg_enter">

        <com.example.medicalregister.widget.TitleLayoutTmView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tltv_name="设置" />

        <LinearLayout
            android:id="@+id/ll_item1"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="93dp"
            android:layout_marginRight="93dp"
            android:background="@drawable/bg_42006fd6_corner7"
            android:paddingLeft="25dp"
            android:paddingRight="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="27dp"
                android:src="@mipmap/icon_white_bluetooth" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="蓝牙"
                android:textSize="22sp"
                android:layout_marginLeft="14dp"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="24dp"
                android:src="@mipmap/icon_white_back"
                android:rotation="180" />
        </LinearLayout>

    </LinearLayout>
</layout>