<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_bg"
    android:background="#ba000000"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:layout_width="match_parent"
        android:layout_height="320dp"
        />
    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_bottom_line_f4f4f4"
                android:orientation="horizontal">
                <com.example.medicalregister.widget.WidgetTextMsg
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:wtm_left="库区："
                    app:wtm_right="03库区（整箱库）"
                    android:visibility="gone"
                    app:wtm_textsize="12px"/>
                <com.example.medicalregister.widget.WidgetTextMsg
                    android:id="@+id/wtm_storageBin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:wtm_left="库位："
                    android:background="@drawable/bg_left_line_f4f4f4"
                    app:wtm_right=""
                    app:wtm_textsize="12px"/>
            </LinearLayout>
            <com.example.medicalregister.widget.WidgetTextMsg
                android:id="@+id/wtm_container_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_bottom_line_f4f4f4"
                app:wtm_left="周转箱号："
                app:wtm_right=""
                app:wtm_textsize="12px"/>
            <LinearLayout
                android:id="@+id/ll_quantity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_bottom_line_f4f4f4"
                android:orientation="horizontal">
                <com.example.medicalregister.widget.WidgetTextMsg
                    android:id="@+id/wtm_scheduledQuantity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:wtm_left="应拣："
                    app:wtm_right=""
                    app:wtm_textsize="12px"/>
                <com.example.medicalregister.widget.WidgetTextMsg
                    android:id="@+id/wtm_quantity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:wtm_left="实拣："
                    android:background="@drawable/bg_left_line_f4f4f4"
                    app:wtm_right=""
                    app:wtm_textsize="12px"/>
            </LinearLayout>
            <com.example.medicalregister.widget.WidgetTextMsg
                android:id="@+id/wtm_slot_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:wtm_left="槽位号："
                app:wtm_right=""
                app:wtm_textsize="12px"/>
            <TextView
                android:id="@+id/tv_slot_nothing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请扫描槽位编码"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:textColor="@color/color_text_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_top_line_f4f4f4"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="取消"
                android:textColor="@color/main_color"
                android:textSize="16sp"
                android:background="@color/white"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="返回托盘"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@color/main_color"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>